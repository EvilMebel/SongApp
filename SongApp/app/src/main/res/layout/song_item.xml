<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/medium_padding"
    android:paddingLeft="@dimen/big_padding"
    android:paddingRight="@dimen/big_padding"
    android:paddingTop="@dimen/medium_padding">

    <ImageView
        android:id="@+id/songItem_imageView"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        app:srcCompat="@drawable/ic_music_note_black_24dp" />


    <TextView
        android:id="@+id/songItem_songNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/songItem_imageView"
        android:layout_toRightOf="@+id/songItem_imageView"
        android:maxLines="1"
        android:text="@string/dummy_text"
        android:textStyle="bold"
        android:paddingBottom="@dimen/medium_padding"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:paddingStart="@dimen/medium_padding" />

    <TextView
        android:id="@+id/songItem_artistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/songItem_songNameText"
        android:layout_toEndOf="@+id/songItem_imageView"
        android:layout_toLeftOf="@+id/songItem_releaseYearText"
        android:layout_toRightOf="@+id/songItem_imageView"
        android:layout_toStartOf="@+id/songItem_releaseYearText"
        style="@style/AppTextStyleSecondary"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:paddingStart="@dimen/medium_padding"
        android:text="@string/dummy_text" />

    <TextView
        android:id="@+id/songItem_releaseYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/songItem_artistText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/songItem_songNameText"
        android:gravity="bottom|right"
        android:maxLines="1"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingStart="@dimen/medium_padding"
        android:text="1000"
        android:textColor="@color/textColorSoft"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>